{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "dist",
    "sourceMap": false,
    "useDefineForClassFields": false,
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "allowJs": true,
    "strict": true,
    "checkJs": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "types": ["node"],
  },
  "include": [
    "global.d.ts",
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
}